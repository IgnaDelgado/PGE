<Window x:Class="Tarea_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reserva" Height="684" Width="922"
        WindowStartupLocation="CenterScreen"
        Background="#F7F9FC">

    <!-- ===================== Recursos / Estilos ===================== -->
    <Window.Resources>
        <!-- Paleta -->
        <Color x:Key="AccentColor">#2563EB</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="#1F2937"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="PanelBrush" Color="White"/>
        <SolidColorBrush x:Key="BorderBrushSoft" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="InputBg" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="InputBorder" Color="#D1D5DB"/>

        <!-- Tipografías -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>
        <Style x:Key="HeaderText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        <Style x:Key="LabelText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{StaticResource SubTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- GroupBox como tarjeta -->
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <DockPanel>
                                <Border Background="#F3F4F6" DockPanel.Dock="Top" Padding="10,8" CornerRadius="8,8,0,0">
                                    <ContentPresenter ContentSource="Header" RecognizesAccessKey="True"/>
                                </Border>
                                <ContentPresenter Margin="10"/>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Inputs -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Botones -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1E4FCC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#93C5FD"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#EEF2FF"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#C7D2FE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E0E7FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- RadioButton “asiento” -->
        <Style x:Key="SeatRadio" TargetType="RadioButton">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bd" CornerRadius="6" BorderBrush="#D1D5DB" BorderThickness="1" Background="White">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#DCFCE7"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#16A34A"/>
                                <Setter Property="Foreground" Value="#065F46"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#F3F4F6"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter TargetName="bd" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ===================== Layout ===================== -->
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Style="{StaticResource HeaderText}" Text="Reserva de vuelo"/>

        <!-- Cuerpo: 2 columnas -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Columna izquierda -->
            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <!-- Pasajero -->
                <GroupBox Header="Datos del pasajero">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}" Text="Nombre"/>
                        <TextBox  Grid.Row="1" Grid.Column="0" x:Name="TxtNombre" Margin="0,0,8,8"/>

                        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelText}" Text="Apellido"/>
                        <TextBox  Grid.Row="1" Grid.Column="1" x:Name="TxtApellido" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelText}" Text="Edad"/>
                        <TextBox  Grid.Row="3" Grid.Column="0" x:Name="TxtEdad" Width="90" PreviewTextInput="OnlyNumbers"/>

                        <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource LabelText}" Text="Sexo"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="CmbSexo">
                            <ComboBoxItem Content="Masculino"/>
                            <ComboBoxItem Content="Femenino"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>

                <!-- Asientos -->
                <GroupBox Header="Elegir asiento">
                    <StackPanel Margin="10">
                        <TextBlock Text="Seleccione un asiento:" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
                        <UniformGrid Rows="6" Columns="4">
                            <RadioButton Style="{StaticResource SeatRadio}" Content="1A" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="1B" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="1C" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="1D" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="2A" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="2B" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="2C" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="2D" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="3A" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="3B" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="3C" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="3D" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="4A" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="4B" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="4C" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="4D" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="5A" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="5B" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="5C" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="5D" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="6A" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="6B" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="6C" GroupName="Asientos"/>
                            <RadioButton Style="{StaticResource SeatRadio}" Content="6D" GroupName="Asientos"/>
                        </UniformGrid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <!-- Columna derecha -->
            <GroupBox Grid.Column="1" Header="Pago">
                <Grid Margin="10">
                    <!-- Estructura clara: filas para título, labels e inputs -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Título -->
                        <RowDefinition Height="Auto"/>
                        <!-- Label Titular -->
                        <RowDefinition Height="Auto"/>
                        <!-- Input Titular -->
                        <RowDefinition Height="Auto"/>
                        <!-- Label Número -->
                        <RowDefinition Height="Auto"/>
                        <!-- Input Número -->
                        <RowDefinition Height="Auto"/>
                        <!-- Labels Venc / CVV -->
                        <RowDefinition Height="Auto"/>
                        <!-- Inputs Venc / CVV -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Título -->
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                               Text="Datos de la tarjeta" FontWeight="Bold" Margin="0,0,0,8"/>

                    <!-- Titular -->
                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                               Style="{StaticResource LabelText}" Text="Titular"/>
                    <TextBox  Grid.Row="2" Grid.ColumnSpan="2" x:Name="TxtTitular"/>

                    <!-- Número tarjeta -->
                    <TextBlock Grid.Row="3" Grid.ColumnSpan="2"
                               Style="{StaticResource LabelText}" Text="Número de tarjeta"/>
                    <TextBox  Grid.Row="4" Grid.ColumnSpan="2"
                              x:Name="TxtNumeroTarjeta" MaxLength="16" PreviewTextInput="OnlyNumbers"/>

                    <!-- Labels Venc / CVV -->
                    <TextBlock Grid.Row="5" Grid.Column="0"
                               Style="{StaticResource LabelText}" Text="Vencimiento (MM/AA)"/>
                    <TextBlock Grid.Row="5" Grid.Column="1"
                               Style="{StaticResource LabelText}" Text="CVV"/>

                    <!-- Inputs Venc / CVV -->
                    <TextBox  Grid.Row="6" Grid.Column="0" x:Name="TxtVencimiento" Margin="0,0,8,0"/>
                    <TextBox  Grid.Row="6" Grid.Column="1" x:Name="TxtCVV" MaxLength="3" PreviewTextInput="OnlyNumbers"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" VerticalAlignment="Center"
                       Foreground="{StaticResource SubTextBrush}"
                       Text="Revisá los datos antes de continuar."/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="Boton_Cancelar" Content="Cancelar"
                        Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                <Button x:Name="Boton_Pagar" Content="Pagar y reservar"
                        Style="{StaticResource PrimaryButton}" Click="Boton_Pagar_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
